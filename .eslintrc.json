{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "p5": "readonly",
    "Matter": "readonly",
    "World": "readonly",
    "Bodies": "readonly",
    "Engine": "readonly",
    "width": "readonly",
    "height": "readonly",
    "frameCount": "readonly",
    "deltaTime": "readonly",
    "createVector": "readonly",
    "random": "readonly",
    "color": "readonly",
    "push": "readonly",
    "pop": "readonly",
    "translate": "readonly",
    "rotate": "readonly",
    "noStroke": "readonly",
    "fill": "readonly",
    "stroke": "readonly",
    "circle": "readonly",
    "ellipseMode": "readonly",
    "ellipse": "readonly",
    "RADIUS": "readonly",
    "TWO_PI": "readonly",
    "beginShape": "readonly",
    "endShape": "readonly",
    "vertex": "readonly",
    "textAlign": "readonly",
    "textSize": "readonly",
    "text": "readonly",
    "strokeWeight": "readonly",
    "line": "readonly",
    "map": "readonly",
    "lerp": "readonly",
    "dist": "readonly",
    "cos": "readonly",
    "sin": "readonly",
    "drawingContext": "readonly",
    "red": "readonly",
    "green": "readonly",
    "blue": "readonly",
    "particles": "readonly",
    "ui": "readonly",
    "engine": "readonly",
    "world": "readonly",
    "glowEnabled": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": "warn",
    "no-console": "warn"
  }
}
